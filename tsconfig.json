{
    "compilerOptions": {
      "target": "es6",       
      "moduleResolution": "node", // <- ESM Resolution
      "esModuleInterop": true,
      "outDir": "./dist",
      "declaration": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
    },
    "include": ["./src/**/*"],
    "exclude": [
      "node_modules"
    ]
  }