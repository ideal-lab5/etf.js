{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
